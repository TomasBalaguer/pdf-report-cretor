        <h3 class="competency-group-title">
          Competencias en vías de desarrollo (Nivel Medio [5/6]) - Parte 2
        </h3>

        <div class="competencies-container distribute-even">
          {{#each competenciasAgrupadas.desarrolloParte2}}
            <div class="competency-card competency-medium {{../competenciasAgrupadas.desarrolloParte2SizeClass}}">
              <div class="competency-header">
                <div class="competency-badge badge-yellow">{{puntaje}}/10</div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    {{/if}}
  {{else}}
    {{#if competenciasAgrupadas.desarrollo}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
        <h3 class="competency-group-title">
          Competencias en vías de desarrollo (Nivel Medio [5/6])
        </h3>

        <div class="competencies-container distribute-even">
          {{#each competenciasAgrupadas.desarrollo}}
            <div class="competency-card competency-medium {{../competenciasAgrupadas.desarrolloSizeClass}}">
              <div class="competency-header">
                <div class="competency-badge badge-yellow">{{puntaje}}/10</div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
