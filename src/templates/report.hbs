<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reporte de Competencias - {{datosPersonales.nombre}}</title>
  <style>
    {{{css}}}
  </style>
</head>
<body>
  <!-- Página 1: Portada y Resumen Ejecutivo -->
  <div class="page">
    {{> header}}

    <h1 class="main-title">Reporte de Competencias</h1>

    <div class="personal-info">
      <div class="info-item">
        <div class="info-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
            <circle cx="12" cy="12" r="4" fill="white"/>
          </svg>
        </div>
        <span class="info-label">Nombre:</span>
        <span class="info-value">{{datosPersonales.nombre}}</span>
      </div>
      <div class="info-item">
        <div class="info-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
            <circle cx="12" cy="12" r="4" fill="white"/>
          </svg>
        </div>
        <span class="info-label">E-mail:</span>
        <span class="info-value">{{datosPersonales.email}}</span>
      </div>
      <div class="info-item">
        <div class="info-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
            <circle cx="12" cy="12" r="4" fill="white"/>
          </svg>
        </div>
        <span class="info-label">Perfil Objetivo:</span>
        <span class="info-value">{{datosPersonales.perfilObjetivo}}</span>
      </div>
      <div class="info-item">
        <div class="info-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"/>
            <circle cx="12" cy="12" r="4" fill="white"/>
          </svg>
        </div>
        <span class="info-label">Fecha de Test:</span>
        <span class="info-value">{{datosPersonales.fechaTest}}</span>
      </div>
    </div>

    {{> executive-summary}}
  </div>

  <!-- Página 2: Competencias destacadas -->
  {{#if competenciasAgrupadas.fortalezasDividido}}
    <!-- Primera parte de fortalezas -->
    {{#if competenciasAgrupadas.fortalezasParte1}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
        <h3 class="competency-group-title">
          Competencias destacadas (Nivel Alto [7/8] o Excepcional [9/10]) - Parte 1
        </h3>

        <div class="competencies-container distribute-even">
          {{#each competenciasAgrupadas.fortalezasParte1}}
            <div class="competency-card competency-high {{../competenciasAgrupadas.fortalezasParte1SizeClass}}">
              <div class="competency-header">
                <div class="competency-badge badge-green">{{puntaje}}/10</div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    {{/if}}

    <!-- Segunda parte de fortalezas -->
    {{#if competenciasAgrupadas.fortalezasParte2}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
