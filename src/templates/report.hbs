      </div>
    </div>
    {{/if}}
  {{else}}
    {{#if competenciasAgrupadas.fortalezas}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
        <h3 class="competency-group-title">
