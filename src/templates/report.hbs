  {{/if}}

  <!-- Competencias a desarrollar -->
  {{#if competenciasAgrupadas.oportunidadesDividido}}
    <!-- Primera parte de oportunidades -->
    {{#if competenciasAgrupadas.oportunidadesParte1}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
        <h3 class="competency-group-title">
          Competencias a desarrollar (Nivel Bajo o muy bajo) - Parte 1
        </h3>

        <div class="competencies-container distribute-even">
          {{#each competenciasAgrupadas.oportunidadesParte1}}
            <div class="competency-card competency-low {{../competenciasAgrupadas.oportunidadesParte1SizeClass}}">
              <div class="competency-header">
                <div class="competency-badge {{#if (lt puntaje 3)}}badge-dark-red{{else}}badge-red{{/if}}">
                  {{puntaje}}/10
                </div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    {{/if}}

    <!-- Segunda parte de oportunidades -->
    {{#if competenciasAgrupadas.oportunidadesParte2}}
    <div class="page">
      {{> header}}

      <h2 class="section-title">Detalle por Competencia</h2>

      <div class="competency-group">
