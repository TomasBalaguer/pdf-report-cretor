        <div class="special-competency-badge">{{competencias_especiales.competencia_especial_3.cumplimiento}}</div>
        <div class="special-competency-title">{{competencias_especiales.competencia_especial_3.nombre}}</div>
        <div class="special-competency-description">{{competencias_especiales.competencia_especial_3.descripcion}}</div>

        <div class="special-competency-details">
          <div class="special-competency-metric">
            <span class="special-competency-label">Competencias:</span>
            <span class="special-competency-value">{{competencias_especiales.competencia_especial_3.competencias_evaluadas}}</span>
          </div>
          <div class="special-competency-metric">
            <span class="special-competency-label">Gap promedio:</span>
            <span class="special-competency-value {{#if (contains competencias_especiales.competencia_especial_3.gap_promedio '+')}}gap-positive{{else}}gap-negative{{/if}}">
              {{competencias_especiales.competencia_especial_3.gap_promedio}}
            </span>
          </div>
        </div>

        <div class="special-competency-analysis">
          <div class="special-competency-analysis-label">Análisis:</div>
          <div class="special-competency-analysis-text">{{competencias_especiales.competencia_especial_3.analisis}}</div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>

  {{!-- Segunda página de competencias especiales (4 y 5) --}}
  {{#if competencias_especiales.competencia_especial_4}}
  <div class="page">
    {{> header company=company logoReskilling=logoReskilling}}

    <div class="special-competencies-section" style="margin-top: 30px;">
      {{#if competencias_especiales.competencia_especial_4}}
      <div class="special-competency-card special-competency-4">
        <div class="special-competency-badge">{{competencias_especiales.competencia_especial_4.cumplimiento}}</div>
        <div class="special-competency-title">{{competencias_especiales.competencia_especial_4.nombre}}</div>
        <div class="special-competency-description">{{competencias_especiales.competencia_especial_4.descripcion}}</div>

        <div class="special-competency-details">
          <div class="special-competency-metric">
            <span class="special-competency-label">Competencias:</span>
            <span class="special-competency-value">{{competencias_especiales.competencia_especial_4.competencias_evaluadas}}</span>
          </div>
          <div class="special-competency-metric">
            <span class="special-competency-label">Gap promedio:</span>
            <span class="special-competency-value {{#if (contains competencias_especiales.competencia_especial_4.gap_promedio '+')}}gap-positive{{else}}gap-negative{{/if}}">
