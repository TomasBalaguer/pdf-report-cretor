          <div class="special-competency-analysis-text">{{competencias_especiales.competencia_especial_4.analisis}}</div>
        </div>
      </div>
      {{/if}}

      {{#if competencias_especiales.competencia_especial_5}}
      <div class="special-competency-card special-competency-5">
        <div class="special-competency-badge">{{competencias_especiales.competencia_especial_5.cumplimiento}}</div>
        <div class="special-competency-title">{{competencias_especiales.competencia_especial_5.nombre}}</div>
        <div class="special-competency-description">{{competencias_especiales.competencia_especial_5.descripcion}}</div>

        <div class="special-competency-details">
          <div class="special-competency-metric">
            <span class="special-competency-label">Competencias:</span>
