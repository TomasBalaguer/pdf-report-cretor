  {{/if}}
  {{/if}}

  {{!-- ============================================ --}}
  {{!-- SECCIÓN DE COMPETENCIAS - ESTRUCTURA COMPLETA --}}
  {{!-- ============================================ --}}

  {{!-- Determinar si necesitamos mostrar el título principal --}}
  {{#if (hasItems competencias.altas)}}
    {{!-- Primera página de ALTAS con título principal --}}
    <div class="page">
      <h2 class="section-title">Detalle por Competencia</h2>
      <div class="competency-group" style="margin-top: 20px;">
        <h3 class="competency-group-title">Competencias destacadas</h3>
        <div class="competencies-container">
          {{#each competencias.altasPaginas.[0].items}}
            <div class="competency-card competency-high card-fixed">
              <div class="competency-header">
                <div class="competency-badge badge-green">{{puntaje}}/10</div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
              {{#if relevanciaGasvalpo}}
              <div class="competency-relevance">
                <strong>Relevancia para Líder Gasvalpo:</strong> {{relevanciaGasvalpo}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    {{!-- Páginas adicionales de ALTAS --}}
    {{#each competencias.altasPaginas}}
      {{#unless esPrimera}}
        <div class="page">
          {{> header company=../company logoReskilling=../logoReskilling}}
          <div class="competency-group" style="margin-top: 20px;">
            <h3 class="competency-group-title">Competencias destacadas (continuación)</h3>
            <div class="competencies-container">
              {{#each items}}
                <div class="competency-card competency-high card-fixed">
                  <div class="competency-header">
                    <div class="competency-badge badge-green">{{puntaje}}/10</div>
                    <div>
                      <div class="competency-name">{{nombre}}</div>
                      {{#if definicion}}
                      <div class="competency-definition">{{definicion}}</div>
                      {{/if}}
                    </div>
                  </div>
                  <div class="competency-description">
                    {{descripcion}}
                  </div>
                  {{#if analisisDetallado}}
                  <div class="competency-analysis">
                    {{analisisDetallado}}
                  </div>
                  {{/if}}
                  {{#if relevanciaGasvalpo}}
                  <div class="competency-relevance">
                    <strong>Relevancia para Líder Gasvalpo:</strong> {{relevanciaGasvalpo}}
                  </div>
                  {{/if}}
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  {{else if (hasItems competencias.medias)}}
    {{!-- Si NO hay altas pero hay medias, primera página con título principal --}}
    <div class="page">
      {{> header company=company logoReskilling=logoReskilling}}
      <h2 class="section-title">Detalle por Competencia</h2>
      <div class="competency-group" style="margin-top: 20px;">
        <h3 class="competency-group-title">Competencias en vías de desarrollo</h3>
        <div class="competencies-container">
          {{#each competencias.mediasPaginas.[0].items}}
            <div class="competency-card competency-medium card-fixed">
              <div class="competency-header">
                <div class="competency-badge badge-yellow">{{puntaje}}/10</div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                  {{#if relevanciaGasvalpo}}
                  <div class="competency-relevance">
                    <strong>Relevancia para Líder Gasvalpo:</strong> {{relevanciaGasvalpo}}
                  </div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    {{!-- Páginas adicionales de MEDIAS cuando son primeras --}}
    {{#each competencias.mediasPaginas}}
      {{#unless esPrimera}}
        <div class="page">
          {{> header company=../company logoReskilling=../logoReskilling}}
          <div class="competency-group" style="margin-top: 20px;">
            <h3 class="competency-group-title">Competencias en vías de desarrollo (continuación)</h3>
            <div class="competencies-container">
              {{#each items}}
                <div class="competency-card competency-medium card-fixed">
                  <div class="competency-header">
                    <div class="competency-badge badge-yellow">{{puntaje}}/10</div>
                    <div>
                      <div class="competency-name">{{nombre}}</div>
                      {{#if definicion}}
                      <div class="competency-definition">{{definicion}}</div>
                      {{/if}}
                    </div>
                  </div>
                  <div class="competency-description">
                    {{descripcion}}
                  </div>
                  {{#if analisisDetallado}}
                  <div class="competency-analysis">
                    {{analisisDetallado}}
                  </div>
                  {{/if}}
                  {{#if relevanciaGasvalpo}}
                  <div class="competency-relevance">
                    <strong>Relevancia para Líder Gasvalpo:</strong> {{relevanciaGasvalpo}}
                  </div>
                  {{/if}}
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  {{else if (hasItems competencias.bajas)}}
    {{!-- Si NO hay altas NI medias pero hay bajas, primera página con título principal --}}
    <div class="page">
      {{> header company=company logoReskilling=logoReskilling}}
      <h2 class="section-title">Detalle por Competencia</h2>
      <div class="competency-group" style="margin-top: 20px;">
        <h3 class="competency-group-title">Competencias a desarrollar</h3>
        <div class="competencies-container">
          {{#each competencias.bajasPaginas.[0].items}}
            <div class="competency-card competency-low card-fixed">
              <div class="competency-header">
                <div class="competency-badge {{#if (lt puntaje 3)}}badge-dark-red{{else}}badge-red{{/if}}">
                  {{puntaje}}/10
                </div>
                <div>
                  <div class="competency-name">{{nombre}}</div>
                  {{#if definicion}}
                  <div class="competency-definition">{{definicion}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="competency-description">
                {{descripcion}}
              </div>
              {{#if analisisDetallado}}
              <div class="competency-analysis">
                {{analisisDetallado}}
              </div>
              {{/if}}
              {{#if relevanciaGasvalpo}}
              <div class="competency-relevance">
                <strong>Relevancia para Líder Gasvalpo:</strong> {{relevanciaGasvalpo}}
              </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    {{!-- Páginas adicionales de BAJAS cuando son primeras --}}
    {{#each competencias.bajasPaginas}}
      {{#unless esPrimera}}
        <div class="page">
          {{> header company=../company logoReskilling=../logoReskilling}}
          <div class="competency-group" style="margin-top: 20px;">
            <h3 class="competency-group-title">Competencias a desarrollar (continuación)</h3>
            <div class="competencies-container">
              {{#each items}}
                <div class="competency-card competency-low card-fixed">
                  <div class="competency-header">
                    <div class="competency-badge {{#if (lt puntaje 3)}}badge-dark-red{{else}}badge-red{{/if}}">
                      {{puntaje}}/10
                    </div>
                    <div>
                      <div class="competency-name">{{nombre}}</div>
                      {{#if definicion}}
                      <div class="competency-definition">{{definicion}}</div>
                      {{/if}}
                    </div>
                  </div>
                  <div class="competency-description">
                    {{descripcion}}
