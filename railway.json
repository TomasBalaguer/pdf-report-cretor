{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["...", "chromium"],
          "aptPkgs": ["fonts-liberation", "libnss3", "libatk-bridge2.0-0", "libdrm2", "libxcomposite1", "libxrandr2", "libgbm1", "libasound2"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}